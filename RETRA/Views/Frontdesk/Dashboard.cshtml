

@model List<User>
@{
    ViewData["Title"] = "Front Desk Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Front Desk Dashboard Styles */
    .frontdesk-dashboard {
        padding: 20px;
        background-color: #f8f9fa;
    }

    .dashboard-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
        padding-bottom: 15px;
        border-bottom: 1px solid #e0e0e0;
    }

    .dashboard-header h2 {
        color: #2c3e50;
        margin: 0;
        font-size: 1.8rem;
    }

    .dashboard-header i {
        margin-right: 10px;
        color: #3498db;
    }

    .welcome-message {
        color: #7f8c8d;
        font-size: 0.9rem;
        margin-top: 5px;
    }

    .header-actions {
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .search-box {
        position: relative;
        display: flex;
        align-items: center;
    }

    .search-box input {
        padding: 8px 15px 8px 35px;
        border: 1px solid #ddd;
        border-radius: 20px;
        width: 200px;
    }

    .search-box i {
        position: absolute;
        left: 12px;
        color: #95a5a6;
    }

    .notification-btn {
        background: none;
        border: none;
        position: relative;
        font-size: 1.1rem;
        color: #7f8c8d;
        cursor: pointer;
    }

    .badge {
        position: absolute;
        top: -5px;
        right: -5px;
        background: #e74c3c;
        color: white;
        border-radius: 50%;
        width: 18px;
        height: 18px;
        font-size: 0.7rem;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* Stats Grid */
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 20px;
        margin-bottom: 30px;
    }

    .stat-card {
        background: white;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        display: flex;
        transition: all 0.3s ease;
    }

    .stat-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    .card-icon {
        width: 60px;
        height: 60px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 15px;
        color: white;
        font-size: 1.5rem;
    }

    .bg-primary { background-color: #3498db; }
    .bg-success { background-color: #2ecc71; }
    .bg-warning { background-color: #f39c12; }
    .bg-danger { background-color: #e74c3c; }

    .card-content h3 {
        color: #7f8c8d;
        font-size: 0.9rem;
        margin: 0 0 5px 0;
    }

    .card-content h2 {
        color: #2c3e50;
        font-size: 1.8rem;
        margin: 0 0 5px 0;
    }

    .trend {
        font-size: 0.8rem;
        margin: 0;
    }

    .trend.up { color: #2ecc71; }
    .trend.down { color: #e74c3c; }

    /* Quick Actions */
    .quick-actions {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 15px;
        margin-bottom: 30px;
    }

    .action-btn {
        background: white;
        border: none;
        border-radius: 8px;
        padding: 15px;
        text-align: center;
        cursor: pointer;
        transition: all 0.3s;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
    }

    .action-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    .action-btn i {
        font-size: 1.5rem;
        color: #3498db;
        margin-bottom: 10px;
        display: block;
    }

    .action-btn span {
        color: #2c3e50;
        font-weight: 500;
    }

    /* Main Content Grid */
    .content-grid {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 20px;
    }

    /* Today's Arrivals */
    .arrivals-card {
        background: white;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
    }

    .section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .section-header h3 {
        color: #2c3e50;
        margin: 0;
    }

    .view-all {
        color: #3498db;
        text-decoration: none;
        font-size: 0.9rem;
    }

    .arrivals-list {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .arrival-item {
        display: flex;
        align-items: center;
        padding: 15px;
        border-radius: 6px;
        background-color: #f8fafc;
        transition: all 0.3s;
    }

    .arrival-item:hover {
        background-color: #e8f4fc;
    }

    .arrival-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background-color: #3498db;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 15px;
        font-weight: bold;
    }

    .arrival-info h4 {
        margin: 0 0 5px 0;
        color: #2c3e50;
    }

    .arrival-info p {
        margin: 0;
        color: #7f8c8d;
        font-size: 0.8rem;
    }

    .arrival-time {
        margin-left: auto;
        color: #3498db;
        font-weight: 500;
        font-size: 0.9rem;
    }

    /* Today's Departures */
    .departures-card {
        background: white;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
    }

    /* Current Occupancy */
    .occupancy-card {
        background: white;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        margin-bottom: 20px;
    }

    .occupancy-stats {
        display: flex;
        justify-content: space-between;
        margin-top: 15px;
    }

    .occupancy-item {
        text-align: center;
    }

    .occupancy-item h3 {
        color: #7f8c8d;
        font-size: 0.9rem;
        margin: 0 0 5px 0;
    }

    .occupancy-item h2 {
        color: #2c3e50;
        font-size: 1.5rem;
        margin: 0;
    }

    /* Recent Alerts */
    .alerts-card {
        background: white;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
    }

    .alert-item {
        display: flex;
        align-items: flex-start;
        padding: 10px 0;
        border-bottom: 1px solid #eee;
    }

    .alert-item:last-child {
        border-bottom: none;
    }

    .alert-icon {
        margin-right: 10px;
        color: #e74c3c;
    }

    .alert-info h4 {
        margin: 0 0 5px 0;
        color: #2c3e50;
        font-size: 0.9rem;
    }

    .alert-info p {
        margin: 0;
        color: #7f8c8d;
        font-size: 0.8rem;
    }

    .alert-time {
        color: #95a5a6;
        font-size: 0.7rem;
    }


</style>

<div class="frontdesk-dashboard">
    <!-- Header -->
    <div class="dashboard-header">
        <div>
            <h2>
                <i class="fas fa-concierge-bell me-2"></i>FRONT DESK DASHBOARD
            </h2>
            <p class="welcome-message">Welcome, @User.Identity.Name! Today is @DateTime.Now.ToString("dddd, MMMM d, yyyy")</p>
        </div>
        <div class="header-actions">
            <div class="search-box">
                <i class="fas fa-search"></i>
                <input type="text" placeholder="Search guest or room...">
            </div>
            <button class="notification-btn">
                <i class="fas fa-bell"></i>
                <span class="badge">3</span>
            </button>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="stats-grid">
        <div class="stat-card">
            <div class="card-icon bg-primary">
                <i class="fas fa-door-open"></i>
            </div>
            <div class="card-content">
                <h3>Rooms Occupied</h3>
                <h2>42</h2>
                <p class="trend up"><i class="fas fa-arrow-up"></i> 5 more than yesterday</p>
            </div>
        </div>

        <div class="stat-card">
            <div class="card-icon bg-success">
                <i class="fas fa-door-closed"></i>
            </div>
            <div class="card-content">
                <h3>Rooms Available</h3>
                <h2>18</h2>
                <p class="trend down"><i class="fas fa-arrow-down"></i> 3 less than yesterday</p>
            </div>
        </div>

        <div class="stat-card">
            <div class="card-icon bg-warning">
                <i class="fas fa-user-clock"></i>
            </div>
            <div class="card-content">
                <h3>Today's Arrivals</h3>
                <h2>12</h2>
                <p class="trend up"><i class="fas fa-arrow-up"></i> 2 more expected</p>
            </div>
        </div>

        <div class="stat-card">
            <div class="card-icon bg-danger">
                <i class="fas fa-user-check"></i>
            </div>
            <div class="card-content">
                <h3>Today's Departures</h3>
                <h2>8</h2>
                <p class="trend down"><i class="fas fa-arrow-down"></i> 1 early checkout</p>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="quick-actions">
        <button class="action-btn">
            <i class="fas fa-plus-circle"></i>
            <span>New Booking</span>
        </button>
        <button class="action-btn">
            <i class="fas fa-user-check"></i>
            <span>Check In</span>
        </button>
        <button class="action-btn">
            <i class="fas fa-user-times"></i>
            <span>Check Out</span>
        </button>
        <button class="action-btn">
            <i class="fas fa-exchange-alt"></i>
            <span>Room Change</span>
        </button>
    </div>

    <!-- Main Content Grid -->
    <div class="content-grid">
        <!-- Left Column -->
        <div>
            <!-- Today's Arrivals -->
            <div class="arrivals-card">
                <div class="section-header">
                    <h3><i class="fas fa-user-clock me-2"></i>Today's Arrivals</h3>
                    <a href="#" class="view-all">View All <i class="fas fa-chevron-right"></i></a>
                </div>
                <div class="arrivals-list">
                    <div class="arrival-item">
                        <div class="arrival-avatar">JD</div>
                        <div class="arrival-info">
                            <h4>John Doe</h4>
                            <p>Deluxe Room • 2 Adults</p>
                        </div>
                        <div class="arrival-time">2:00 PM</div>
                    </div>
                    <div class="arrival-item">
                        <div class="arrival-avatar">AS</div>
                        <div class="arrival-info">
                            <h4>Alice Smith</h4>
                            <p>Suite • 2 Adults, 1 Child</p>
                        </div>
                        <div class="arrival-time">3:30 PM</div>
                    </div>
                    <div class="arrival-item">
                        <div class="arrival-avatar">RJ</div>
                        <div class="arrival-info">
                            <h4>Robert Johnson</h4>
                            <p>Standard Room • 1 Adult</p>
                        </div>
                        <div class="arrival-time">5:45 PM</div>
                    </div>
                </div>
            </div>

            <!-- Today's Departures -->
            <div class="departures-card" style="margin-top: 20px;">
                <div class="section-header">
                    <h3><i class="fas fa-user-check me-2"></i>Today's Departures</h3>
                    <a href="#" class="view-all">View All <i class="fas fa-chevron-right"></i></a>
                </div>
                <div class="arrivals-list">
                    <div class="arrival-item">
                        <div class="arrival-avatar">MS</div>
                        <div class="arrival-info">
                            <h4>Maria Garcia</h4>
                            <p>Suite • Late checkout requested</p>
                        </div>
                        <div class="arrival-time">11:00 AM</div>
                    </div>
                    <div class="arrival-item">
                        <div class="arrival-avatar">TW</div>
                        <div class="arrival-info">
                            <h4>Thomas Wilson</h4>
                            <p>Deluxe Room • Early departure</p>
                        </div>
                        <div class="arrival-time">12:00 PM</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Column -->
        <div>
            <!-- Current Occupancy -->
            <div class="occupancy-card">
                <div class="section-header">
                    <h3><i class="fas fa-chart-pie me-2"></i>Current Occupancy</h3>
                </div>
                <div class="occupancy-stats">
                    <div class="occupancy-item">
                        <h3>Suites</h3>
                        <h2>85%</h2>
                    </div>
                    <div class="occupancy-item">
                        <h3>Deluxe</h3>
                        <h2>72%</h2>
                    </div>
                    <div class="occupancy-item">
                        <h3>Standard</h3>
                        <h2>68%</h2>
                    </div>
                </div>
            </div>

            <!-- Recent Alerts -->
            <div class="alerts-card">
                <div class="section-header">
                    <h3><i class="fas fa-exclamation-circle me-2"></i>Recent Alerts</h3>
                </div>
                <div>
                    <div class="alert-item">
                        <i class="fas fa-bolt alert-icon"></i>
                        <div class="alert-info">
                            <h4>Maintenance Request</h4>
                            <p>Room 302 - AC not working</p>
                            <p class="alert-time">15 minutes ago</p>
                        </div>
                    </div>
                    <div class="alert-item">
                        <i class="fas fa-utensils alert-icon"></i>
                        <div class="alert-info">
                            <h4>Room Service</h4>
                            <p>Room 215 - Extra towels needed</p>
                            <p class="alert-time">32 minutes ago</p>
                        </div>
                    </div>
                    <div class="alert-item">
                        <i class="fas fa-bed alert-icon"></i>
                        <div class="alert-info">
                            <h4>Housekeeping</h4>
                            <p>Room 107 - Do Not Disturb since 10AM</p>
                            <p class="alert-time">1 hour ago</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Chart.js for occupancy visualization -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Occupancy Pie Chart
        const ctx = document.createElement('canvas');
        document.querySelector('.occupancy-card').appendChild(ctx);
        
        new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: ['Occupied', 'Available', 'Out of Service'],
                datasets: [{
                    data: [42, 18, 2],
                    backgroundColor: [
                        '#3498db',
                        '#2ecc71',
                        '#e74c3c'
                    ],
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                cutout: '70%',
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });
    });
</script>
<script>
    // Star Rating Functionality
    document.querySelectorAll('.star-rating i').forEach(star => {
        star.addEventListener('click', function() {
            const rating = parseInt(this.getAttribute('data-rating'));
            const container = this.parentElement;

            // Reset all stars
            container.querySelectorAll('i').forEach(s => {
                s.classList.remove('fas', 'active');
                s.classList.add('far');
            });

            // Fill stars up to the clicked one
            for (let i = 0; i < rating; i++) {
                container.children[i].classList.remove('far');
                container.children[i].classList.add('fas', 'active');
            }
        });
    });

    // Aspect Rating Functionality
    document.querySelectorAll('.aspect-stars i').forEach(star => {
        star.addEventListener('click', function() {
            const rating = parseInt(this.getAttribute('data-rating'));
            const aspect = this.getAttribute('data-aspect');
            const container = this.parentElement;

            // Reset all stars for this aspect
            container.querySelectorAll('i').forEach(s => {
                s.classList.remove('fas', 'active');
                s.classList.add('far');
            });

            // Fill stars up to the clicked one
            for (let i = 0; i < rating; i++) {
                container.children[i].classList.remove('far');
                container.children[i].classList.add('fas', 'active');
            }
        });
    });

    // Submit Feedback
    document.querySelector('.submit-feedback').addEventListener('click', function() {
        // In a real app, this would submit the form data to the server
        document.getElementById('feedbackModal').style.display = 'flex';

        // Reset form after submission
        setTimeout(() => {
            document.querySelectorAll('.star-rating i, .aspect-stars i').forEach(star => {
                star.classList.remove('fas', 'active');
                star.classList.add('far');
            });
            document.getElementById('feedback-title').value = '';
            document.getElementById('feedback-comment').value = '';
        }, 2000);
    });

    // Close Modal
    document.querySelector('.close-modal').addEventListener('click', function() {
        document.getElementById('feedbackModal').style.display = 'none';
    });

    document.querySelector('.modal-close-btn').addEventListener('click', function() {
        document.getElementById('feedbackModal').style.display = 'none';
    });

    // Close modal when clicking outside
    window.addEventListener('click', function(event) {
        if (event.target === document.getElementById('feedbackModal')) {
            document.getElementById('feedbackModal').style.display = 'none';
        }
    });
</script>
                                <i class="far fa-star" data-aspect="comfort" data-rating="1"></i>
                                <i class="far fa-star" data-aspect="comfort" data-rating="2"></i>
                                <i class="far fa-star" data-aspect="comfort" data-rating="3"></i>
                                <i class="far fa-star" data-aspect="comfort" data-rating="4"></i>
                                <i class="far fa-star" data-aspect="comfort" data-rating="5"></i>
                            </div>
                        </div>
                        <div class="aspect-item">
                            <span>Service</span>
                            <div class="aspect-stars">
                                <i class="far fa-star" data-aspect="service" data-rating="1"></i>
                                <i class="far fa-star" data-aspect="service" data-rating="2"></i>
                                <i class="far fa-star" data-aspect="service" data-rating="3"></i>
                                <i class="far fa-star" data-aspect="service" data-rating="4"></i>
                                <i class="far fa-star" data-aspect="service" data-rating="5"></i>
                            </div>
                        </div>
                        <div class="aspect-item">
                            <span>Value</span>
                            <div class="aspect-stars">
                                <i class="far fa-star" data-aspect="value" data-rating="1"></i>
                                <i class="far fa-star" data-aspect="value" data-rating="2"></i>
                                <i class="far fa-star" data-aspect="value" data-rating="3"></i>
                                <i class="far fa-star" data-aspect="value" data-rating="4"></i>

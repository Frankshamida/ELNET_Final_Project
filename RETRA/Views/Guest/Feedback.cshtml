@{
    ViewData["Title"] = "Feedback";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="admin-dashboard">
    <!-- Header -->
    <div class="dashboard-header">
        <div>
            <h2>
                <i class="fas fa-comment-alt"></i> FEEDBACK
            </h2>
            <p class="feedback-subtitle">Share your experience and view your past reviews</p>
        </div>
    </div>

    <!-- Leave Feedback Section -->
    <div class="feedback-section">
        <h3>Leave Feedback for Your Last Stay</h3>

        <div class="last-stay-card">
            <div class="stay-info">
                <div class="stay-image" style="background-image: url('/images/deluxe-room.jpg')"></div>
                <div class="stay-details">
                    <h4>Deluxe Room</h4>
                    <div class="stay-meta">
                        <span><i class="fas fa-calendar-alt"></i> 10-13 Dec 2023 (3 nights)</span>
                        <span><i class="fas fa-map-marker-alt"></i> Room 302</span>
                    </div>
                    <p>Thank you for staying with us! We'd love to hear about your experience.</p>
                </div>
            </div>

            <div class="feedback-form">
                <div class="rating-section">
                    <h5>Overall Rating</h5>
                    <div class="star-rating">
                        <i class="far fa-star" data-rating="1"></i>
                        <i class="far fa-star" data-rating="2"></i>
                        <i class="far fa-star" data-rating="3"></i>
                        <i class="far fa-star" data-rating="4"></i>
                        <i class="far fa-star" data-rating="5"></i>
                    </div>
                </div>

                <div class="form-group">
                    <label for="feedback-title">Review Title</label>
                    <input type="text" id="feedback-title" class="form-control" placeholder="Summarize your experience">
                </div>

                <div class="form-group">
                    <label for="feedback-comment">Your Review</label>
                    <textarea id="feedback-comment" class="form-control" rows="5" placeholder="Tell us about your stay..."></textarea>
                </div>

                <div class="form-group">
                    <label>Rate Specific Aspects</label>
                    <div class="aspect-ratings">
                        <div class="aspect-item">
                            <span>Cleanliness</span>
                            <div class="aspect-stars">

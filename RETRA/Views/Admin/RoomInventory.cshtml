                        <div class="action-buttons">
                            <button class="btn-action edit-btn" title="Edit"><i class="fas fa-edit"></i></button>
                            <button class="btn-action view-btn" title="Details"><i class="fas fa-eye"></i></button>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>102</td>
                    <td>Standard</td>
                    <td>1</td>
                    <td><span class="status-badge inactive-badge"><i class="fas fa-circle"></i> Occupied</span></td>
                    <td>$120</td>
                    <td>Yesterday, 4:15 PM</td>
                    <td>
                        <div class="action-buttons">
                            <button class="btn-action edit-btn" title="Edit"><i class="fas fa-edit"></i></button>
                            <button class="btn-action view-btn" title="Details"><i class="fas fa-eye"></i></button>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>201</td>
                    <td>Deluxe</td>
                    <td>2</td>
                    <td><span class="status-badge active-badge"><i class="fas fa-circle"></i> Available</span></td>
                    <td>$180</td>
                    <td>Today, 9:00 AM</td>
                    <td>
                        <div class="action-buttons">
                            <button class="btn-action edit-btn" title="Edit"><i class="fas fa-edit"></i></button>
                            <button class="btn-action view-btn" title="Details"><i class="fas fa-eye"></i></button>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>202</td>
                    <td>Deluxe</td>
                    <td>2</td>
                    <td><span class="status-badge inactive-badge"><i class="fas fa-circle"></i> Occupied</span></td>
                    <td>$180</td>
                    <td>Yesterday, 3:45 PM</td>
                    <td>
                        <div class="action-buttons">
                            <button class="btn-action edit-btn" title="Edit"><i class="fas fa-edit"></i></button>
                            <button class="btn-action view-btn" title="Details"><i class="fas fa-eye"></i></button>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>301</td>
                    <td>Suite</td>
                    <td>3</td>
                    <td><span class="status-badge inactive-badge"><i class="fas fa-circle"></i> Maintenance</span></td>
                    <td>$250</td>
                    <td>Monday, 11:20 AM</td>
                    <td>
                        <div class="action-buttons">
                            <button class="btn-action edit-btn" title="Edit"><i class="fas fa-edit"></i></button>
                            <button class="btn-action view-btn" title="Details"><i class="fas fa-eye"></i></button>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    <div class="pagination-container">
        <div class="pagination-info">
            Showing 1 to 5 of 15 rooms
        </div>
        <ul class="pagination">
            <li class="page-item disabled">
